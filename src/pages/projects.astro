---
import Layout from "../layouts/Layout.astro";
import { projectsPageContent } from "../config";
import ProjectCard from "../components/ProjectCard.astro";
---

<Layout seo={projectsPageContent.seo}>
  <section class="mt-10 max-w-xl mx-auto px-4">
    <h1 class="font-bold text-2xl mb-4">projects</h1>
    <p class="opacity-70 mb-8 text-sm">{projectsPageContent.subtitle}</p>
    <div class="grid grid-cols-1 gap-6">
      {
        projectsPageContent.projects.map((project) => (
          <ProjectCard {...project} />
        ))
      }
    </div>
  </section>
</Layout>
